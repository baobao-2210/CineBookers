<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/authorAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:backgroundTint="#5B5FC7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@android:color/white" />
        </androidx.cardview.widget.CardView>

        <!-- Author Name -->
        <TextView
            android:id="@+id/tvAuthorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TS.Nguyễn Tấn Thuận"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5B5FC7"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/authorAvatar"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            app:layout_constraintTop_toTopOf="@id/authorAvatar"
            app:layout_constraintBottom_toBottomOf="@id/authorAvatar" />

        <!-- More Button -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_input_add"
            android:rotation="45"
            app:tint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Document Title -->
        <TextView
            android:id="@+id/tvDocTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lập trình hướng đối tượng chương I"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/docTypeBadge"
            app:layout_constraintTop_toBottomOf="@id/authorAvatar" />

        <!-- Document Type Badge (PDF/PPT) -->
        <TextView
            android:id="@+id/docTypeBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:background="#FFE5E0"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDocTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvDocTitle" />

        <!-- Subject Tag -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subjectLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDocTitle">

            <ImageView
                android:id="@+id/iconSubject1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#4CAF50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvSubject1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình hướng đối tượng"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/iconSubject1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Teacher Tag -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/teacherLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subjectLayout1">

            <ImageView
                android:id="@+id/iconTeacher"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#FF9800"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T.S Nguyễn Quốc Hùng"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/iconTeacher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Major Tag -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/majorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teacherLayout">

            <ImageView
                android:id="@+id/iconMajor"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#2196F3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công nghệ thông tin"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/iconMajor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Stats (Downloads, Likes, Rating) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/majorLayout">

            <!-- Downloads -->
            <ImageView
                android:id="@+id/iconDownload"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/stat_sys_download"
                app:tint="#666666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvDownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/iconDownload"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Likes -->
            <ImageView
                android:id="@+id/iconLike"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="#666666"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tvDownloads"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/iconLike"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Rating -->
            <ImageView
                android:id="@+id/iconRating"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star"
                app:tint="#FFC107"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/tvLikes"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="12sp"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/iconRating"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>